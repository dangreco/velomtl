    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.5.0",
    "@tsconfig/recommended": "^1.0.6",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.9",
    "eslint": "^9.5.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.7",
    "typescript": "^5.5.2",
    "typescript-eslint": "^7.14.1"
