    "format": "prettier",
    "format:check": "pnpm format --check --debug-check",
    "format:fix": "pnpm format --write",
    "lint": "eslint",
    "lint:fix": "pnpm lint --fix",
    "prepare": "node .husky/install.mjs",
    "commitlint": "commitlint"
  },
